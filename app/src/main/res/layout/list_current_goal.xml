<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_goal_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/current_goal_type_icon"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_gravity="center_vertical"
        app:srcCompat="@drawable/ic_fitness_center_black_24dp"
        />

    <TextView
        style="@style/TextAppearance.AppCompat.Body1"
        android:id="@+id/current_goal_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="4dp"
        android:textStyle="bold"
        android:maxEms="12"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="Workout and then do other stuff and stuff"
        />

    <TextView
        style="@style/TextAppearance.AppCompat.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        android:text="@string/basic_dash"
        />

    <TextView
        style="@style/TextAppearance.AppCompat.Body1"
        android:id="@+id/current_goal_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="stuff"
        />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/current_goal_completed"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_marginStart="4dp"
        android:layout_gravity="center_vertical"
        app:srcCompat="@drawable/ic_check_accent_24dp"
        />
</LinearLayout>
